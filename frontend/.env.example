# API Configuration
NEXT_PUBLIC_API_URL=your-api-url
NEXT_PUBLIC_API_KEY=your-api-key
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_LONG_POLL_TIMEOUT=300000
NEXT_PUBLIC_ENV=production

# Authentication
NEXT_PUBLIC_AUTH_URL=https://your-domain.vercel.app
NEXT_PUBLIC_AUTH_SECRET=generate-this-with-openssl-rand-base64-32
NEXT_PUBLIC_ADMIN_USERNAME=your-admin-email
NEXT_PUBLIC_ADMIN_PASSWORD=generate-this-with-openssl-rand-base64-24
NEXT_PUBLIC_AUTH_COOKIE_NAME=nedapay_session

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Feature Flags
NEXT_PUBLIC_IS_DEMO=false
NEXT_PUBLIC_ENABLE_STAKING=false
NEXT_PUBLIC_ENABLE_GOVERNANCE=false
NEXT_PUBLIC_ENABLE_LENDING=false

# Demo Mode Configuration
NEXT_PUBLIC_MOCK_API_DELAY=2000
NEXT_PUBLIC_MOCK_FAILURE_RATE=0.1

# Vercel Deployment
VERCEL_TOKEN=your-vercel-token
VERCEL_TEAM_ID=nedapay
VERCEL_PROJECT=nedapay-bank-portal

# Important: Never commit the actual .env.production file!
